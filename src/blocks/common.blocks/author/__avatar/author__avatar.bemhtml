block('author').elem('avatar')(
    match(function () {
        var c = this.ctx.content;

        return c && c.avatar;
    })(
        tag()('img'),
        attrs()(function () {
            var content = this.ctx.content;

            return {
                src: content.gravatarUrl || content.avatar,
                alt: content.slug
            };
        })
    )
);
