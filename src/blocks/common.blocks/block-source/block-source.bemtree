block('block-source').content()(function() {
    var sourceUrl = this.data.node.sourceUrl;

    return applyNext()
        .filter(function(file) {
            return !file.isDir;
        })
        .map(function(file) {
            return {
                tag: 'li',
                content: sourceUrl ? {
                    block: 'link',
                    url: sourceUrl + file.path,
                    content: file.path
                } : file.path
            };
        });
});
