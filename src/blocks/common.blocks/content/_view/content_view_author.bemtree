block('content').mod('view', 'author').content()(function () {
    var data = this.data;

    return [
        applyNext(),
        {
            block: 'author',
            mods: { view: 'full' },
            id: data.node.route.conditions.id
        },
        {
            block: this.block,
            elem: 'author-posts',
            content: data.posts.map(function (node) {
                return {
                    block: 'posts',
                    title: node.title,
                    node: node
                };
            })
        }
    ];
});
